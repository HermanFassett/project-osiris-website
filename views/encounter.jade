extends layout

block content
  .page-header
    h3 Create Encounter

  form.form-horizontal(role='form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='title') Title
      .col-sm-8
        input.form-control(type='text', name='title', id='title', autofocus=true, autocomplete='off', maxlength='100')
    .form-group
      label(class='col-sm-2 control-label', for='url') Data
      .col-sm-8
        input.form-control(type='text', name='url', id='url')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-success(type='submit') Create
