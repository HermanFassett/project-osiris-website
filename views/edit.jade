extends layout

block content
  .page-header
    h3 Edit Encounter

  form.form-horizontal(role='form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='owner', value=owner)
    .form-group
      label(class='col-sm-2 control-label', for='title') Title
      .col-sm-8
        input.form-control(type='text', name='title', id='title', autofocus=true, autocomplete='off', maxlength='100', placeholder='Title...', value=title)

    .form-group
      label(class='col-sm-2 control-label', for='description') Description
      .col-sm-8
        textarea.form-control(rows='2', name='description', id='description', placeholder='Description...') #{description}
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-success(type='submit') Edit
